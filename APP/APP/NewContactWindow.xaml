        <TextBox Name="TextBoxEMail" HorizontalAlignment="Left" Height="19" Margin="64,73,0,0" TextWrapping="Wrap" Text="E-Mail" VerticalAlignment="Top" Width="136"/>
        <TextBox Name="TextBoxPhoneNumber" HorizontalAlignment="Left" Height="19" Margin="223,73,0,0" TextWrapping="Wrap" Text="Telefon" VerticalAlignment="Top" Width="136"/>
    </Grid>
</Window>
